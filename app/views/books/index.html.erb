<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <%# 新規データ追加 %>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book) %>
        <%= link_to "Edit", edit_book_path(book) %>
        <%= link_to "Destroy", book_path(book), method: :delete %></td>
  </tr>
  <% end %>
</table>

<h3>New book</h3>

<%= form_for(@book) do |f| %>
    
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerror
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    <% end %>
    
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %><br>
 
    <%= f.submit 'Create Book' %>
 
<% end %>